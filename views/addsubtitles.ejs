    <h1><%= cloudname %></h1>
    <h2 class="subtitle">Add subtitles for <%= req.params.file %></h2>
    <% let link = `/addsubtitles/${req.user.username}/${req.params.file}` %>
    <form action=<%= link %> method="post">
        <input name="_csrf" value=<%= csrfToken %> type="hidden"/>
        <label for="name"><span class="material-icons">edit</span>&nbsp;Subtitles name</label>
        <input type="text" id="name" name="name" required></input>
        <label for="url"><span class="material-icons">link</span>&nbsp;Subtitles URL</label>
        <input type="text", id="url", name="url" required></input>
        <p>Works only with .vtt</p>
        <div style="margin: 0 auto; text-align: center">
        <a href="https://docs.daneeskripter.dev/daneecloud/subtitlesfromfile">Want subtitles from file?</a>
        </div>
        <button type="submit" id="add"><span class="material-icons">add</span>&nbsp;Add subtitles</button>
    </form>
