    <h1><%= cloudname %></h1>
    <h2 class="subtitle">Delete role </h2>
    <form action="/delrole/" method="post">
    <input name="_csrf" value=<%= csrfToken %> type="hidden"/>
    <select name="role">
        <% for (let role of roles) { %>
            <option value=<%= role.name %>><%= role.name %> | <%= role.maxStorage %> MB</option>
        <% } %>
    </select>
    <button type="submit" id="add"><span class="material-icons">delete</span>&nbsp;Delete role</button>
    </form>
